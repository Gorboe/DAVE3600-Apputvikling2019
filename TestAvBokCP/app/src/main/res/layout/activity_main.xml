<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hoved_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gorboe.com.testavbokcp.MainActivity">
    <EditText android:id="@+id/tittel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tittel" />
    <EditText android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="edit" />
    <Button
        android:id="@+id/leggtil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legg til bok"
        android:onClick="leggtil" />
    <Button
        android:id="@+id/visalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vis alle bÃ¸ker"
        android:onClick="visalle" />
    <Button
        android:id="@+id/slett"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="slett"
        android:onClick="slett" />
    <Button
        android:id="@+id/oppdater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="oppdater"
        android:onClick="oppdater" />

    <TextView android:id="@+id/vis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>