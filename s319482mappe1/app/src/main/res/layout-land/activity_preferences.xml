<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PreferencesActivity">

    <Button
        android:id="@+id/btn_25_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/option_25"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_10_questions"
        app:layout_constraintStart_toEndOf="@+id/btn_10_questions" />

    <Button
        android:id="@+id/btn_5_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/option_5"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_10_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/option_10"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_5_questions"
        app:layout_constraintStart_toEndOf="@+id/btn_5_questions" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="@string/question_amount"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="168dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="@string/lang_norsk"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="168dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="@string/lang_tysk"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btn_german"
        app:layout_constraintTop_toBottomOf="@+id/btn_norwegian" />

    <Button
        android:id="@+id/btn_german"
        android:layout_width="150dp"
        android:layout_height="98dp"
        android:background="@drawable/german_button_deactivated"
        app:layout_constraintStart_toStartOf="@+id/btn_norwegian"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btn_norwegian"
        android:layout_width="152dp"
        android:layout_height="98dp"
        android:background="@drawable/norwegian_button_deactivated"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>