<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="237dp"
        android:layout_height="98dp"
        android:drawableStart="@drawable/play_arrow"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/btn_start_game"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <Button
        android:id="@+id/btn_preferences"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:background="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_start_game"
        app:layout_constraintTop_toBottomOf="@+id/btn_statistics"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_statistics"
        android:layout_width="53dp"
        android:layout_height="43dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/btn_start_game"
        app:layout_constraintTop_toTopOf="@+id/btn_start_game" />
</androidx.constraintlayout.widget.ConstraintLayout>